@model OtoServisSatis.Entities.Marka

@{
    ViewData["Title"] = "Silme Sayfası";
}

<h1>Silme Sayfası</h1>

<h4>Silme işlemi yapılacak. Emin misiniz?</h4>

<div>
    <h4>Marka</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
        Ad        
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model=>model.Adi)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>