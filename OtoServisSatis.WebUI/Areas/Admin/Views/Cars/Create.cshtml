@model OtoServisSatis.Entities.Arac

@{
    ViewData["Title"] = "Araç Ekleme";
}

<h1>Araç Ekleme Sayfası</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div>
                <label asp-for="MarkaId"></label>
                <select asp-for="MarkaId" class="form-select" asp-items="ViewBag.MarkaId"> </select>
            </div>
            <div>
                <label asp-for="Renk"></label>
                <input asp-for="Renk" class="form-control" />
                <span asp-validation-for="Renk" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Fiyati"></label>
                <input asp-for="Fiyati" class="form-control" />
                <span asp-validation-for="Fiyati" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Modeli"></label>
                <input asp-for="Modeli" class="form-control" />
                <span asp-validation-for="Modeli" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="KasaTipi"></label>
                <input asp-for="KasaTipi" class="form-control" />
                <span asp-validation-for="KasaTipi" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="ModelYili"></label>
                <input asp-for="ModelYili" class="form-control" />
                <span asp-validation-for="ModelYili" class="text-danger"></span>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SatistaMi" /> Satışta mı?
                </label>
            </div>
            <div>
                <label asp-for="Notlar"></label>
                <input asp-for="Notlar" class="form-control" />
                <span asp-validation-for="Notlar" class="text-danger"></span>
            </div>
            <input class="btn btn-primary my-2" type="submit" value="Ekle" />
        </form>
    </div>

</div>