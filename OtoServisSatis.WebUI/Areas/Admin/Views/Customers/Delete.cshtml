@model OtoServisSatis.Entities.Musteri

@{
    ViewData["Title"] = "Müşteri Silme Sayfası";
}

<h1>Müşteri Silme Sayfası</h1>

<h4>Silme işlemi yapmaya emin misiniz?</h4>

<div>
    <h4>Müşteri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adi)
        </dd>
        <dt class="col-sm-2">
            Soyad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Soyadi)
        </dd>
        <dt class="col-sm-2">
            TcNo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TcNo)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Adres
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adres)
        </dd>
        <dt class="col-sm-2">
            Telefon
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefon)
        </dd>
        <dt class="col-sm-2">
            Notlar
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notlar)
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Sil" class="btn btn-danger" />
    <a class="btn btn-primary" asp-action="Index">Listeye Geri Dön</a>
</form>
