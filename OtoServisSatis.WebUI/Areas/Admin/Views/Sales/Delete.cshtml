@model OtoServisSatis.Entities.Satis

@{
    ViewData["Title"] = "Satş Silme Sayfası";
}

<h1>Satış Silme Sayfası</h1>

<h4>Satış işlemi yapmaya emin misiniz?</h4>

<div>
    <h4>Satış</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Satış Fiyatı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SatisFiyati)
        </dd>
        <dt class="col-sm-2">
            Satış Tarihi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SatisTarihi)
        </dd>
        <dt class="col-sm-2">
            Araç
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Arac.Modeli)
        </dd>
        <dt class="col-sm-2">
            Müşteri
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Musteri.Adi)
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Sil" class="btn btn-danger" />
    <a class="btn btn-primary" asp-action="Index">Listeye Geri Dön</a>
</form>
