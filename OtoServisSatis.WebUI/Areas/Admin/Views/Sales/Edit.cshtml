@model OtoServisSatis.Entities.Satis

@{
    ViewData["Title"] = "Satış Düzenleme Sayfası";
}

<h1>Satış Düzenleme Sayfası</h1>

<div class="row">
    <div class="col md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger "></div>
            <input type="hidden" asp-for="Id" /> @*Eklenme tarihi güncellenmesini engeller*@

            <div class="form-group">
                <label asp-for="AracId" class="control-label"></label>
                <select asp-for="AracId" class="form-select" asp-items="ViewBag.AracId"></select>
                <span asp-validation-for="AracId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MusteriId" class="control-label"></label>
                <select asp-for="MusteriId" class="form-select" asp-items="ViewBag.MusteriId"></select>
                <span asp-validation-for="MusteriId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SatisFiyati" class="control-label"></label>
                <input asp-for="SatisFiyati" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SatisTarihi" class="control-label"></label>
                <input asp-for="SatisTarihi" class="form-control" />
            </div>
            <input type="submit" value="Kaydet" class="btn btn-primary mt-2" />
        </form>
    </div>
</div>
