@model OtoServisSatis.Entities.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Silme";
}

<h1>Kullanıcı Silme Sayfası</h1>

<h4>Silme işlemi yapmaktan emin olunuz.</h4>

<div>
    <h4>Kullanıcı</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Soyadi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Soyadi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefon)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefon)
        </dd>


    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>