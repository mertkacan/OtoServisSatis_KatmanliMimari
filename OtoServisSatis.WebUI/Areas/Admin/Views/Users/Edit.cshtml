@model OtoServisSatis.Entities.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Düzenleme";
}

<h1>Kullanıcı Düzenleme Sayfası</h1>

<div class="row">
    <div class="col md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger "></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EklenmeTarihi" /> @*Eklenme tarihi güncellenmesini engeller*@
            <div class="form-group">
                <label asp-for="Adi" class="control-label"></label>
                <input asp-for="Adi" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Soyadi" class="control-label"></label>
                <input asp-for="Soyadi" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="KullaniciAdi" class="control-label"></label>
                <input asp-for="KullaniciAdi" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Sifre" class="control-label"></label>
                <input asp-for="Sifre" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AktifMi" />@Html.DisplayNameFor(x => x.AktifMi)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="RolId" class="control-label"></label>
                <select asp-for="RolId" class="form-select" asp-items="ViewBag.RolId"></select>
            </div>

            <input type="submit" value="Kaydet" class="btn btn-primary mt-2" />
        </form>
    </div>
</div>